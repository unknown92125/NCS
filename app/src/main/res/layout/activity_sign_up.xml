<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:text="@string/sign_up"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sign_up"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
        android:hint="@string/id"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:maxLength="16"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="@string/id_text"
        android:textSize="12dp" />


    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
        android:hint="@string/password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16" />

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pw"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="@string/pw_text"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/et_pw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pw"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
        android:hint="@string/password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16" />

    <TextView
        android:id="@+id/tv_pw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pw2"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="@string/password_text"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pw2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:digits="0123456789"
        android:ems="11"
        android:hint="@string/phone_number"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:lines="1"
        android:maxLength="11" />

    <Button
        android:id="@+id/bt_get_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/et_phone"
        android:layout_alignBottom="@id/et_phone"
        android:onClick="getVerificationCode"
        android:layout_toRightOf="@id/et_phone"
        android:text="인증번호 받기" />

    <EditText
        android:id="@+id/et_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_get_verification"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:digits="0123456789"
        android:ems="11"
        android:hint="@string/verification_code"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:lines="1"
        android:maxLength="10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_verification"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="@string/verification_code_text"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bt_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/et_verification"
        android:layout_alignBottom="@id/et_verification"
        android:onClick="checkVerificationCode"
        android:layout_toRightOf="@id/et_verification"
        android:text="@string/enter" />

    <Button
        android:id="@+id/bt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        android:background="@color/gray4"
        android:onClick="signUp"
        android:text="@string/enter"
        android:textColor="@color/white" />

</RelativeLayout>