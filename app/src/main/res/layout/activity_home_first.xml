<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFirstActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="@string/home_1_1"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_title"
        android:layout_alignBottom="@id/tv_title"
        android:clickable="true"
        android:onClick="back"
        android:paddingHorizontal="16dp"
        android:src="@drawable/arrow_left" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_reservation"
        android:layout_below="@+id/tv_title"
        android:background="@color/white2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pager_img_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray3"
                    android:padding="12dp"
                    android:text="@string/home_first_title"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:text="@string/home_first_text"
                    android:textColor="@color/gray3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray3"
                    android:padding="12dp"
                    android:text="@string/home_first_title2"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:text="@string/home_first_text2"
                    android:textColor="@color/gray3" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/bt_reservation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray5"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:onClick="reservation"
        android:padding="8dp"
        android:text="@string/reservation"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>