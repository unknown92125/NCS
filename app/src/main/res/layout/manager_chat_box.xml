<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/app_name_kr" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_chat"
        android:layout_gravity="start"
        app:cardBackgroundColor="@color/white2"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/tv_manager_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_time_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cv"
        android:layout_toRightOf="@id/cv" />

</RelativeLayout>